mode: paper
safe_mode:
  enabled: false
  hold_on_startup: false
  require_double_confirmation: false
venues:
  binance:
    name: binance
    trading_pairs:
    - BTC/USDT
    - ETH/USDT
    taker_fee_bps: 7.5
    maker_fee_bps: 1.0
    simulate: true
  okx:
    name: okx
    trading_pairs:
    - BTC/USDT
    - ETH/USDT
    taker_fee_bps: 7.0
    maker_fee_bps: 0.8
    simulate: true
risk:
  max_position_usd: 2000
  max_single_order_usd: 150
  max_daily_drawdown_usd: 300
  stop_loss_bps: 45
scheduler:
  max_workers: 2
  tick_interval_ms: 200
storage:
  journal_path: data/paper_journal.sqlite3
  archive_path: data/archive/paper
